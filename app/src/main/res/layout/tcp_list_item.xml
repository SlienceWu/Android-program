<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <LinearLayout
        android:id="@+id/change_printer_name"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="12dp"
        android:background="@drawable/background_border_bottom"
        android:orientation="horizontal">
        <ImageView
            android:id="@+id/printer_state"
            android:layout_width="@dimen/height_24_sp"
            android:layout_height="@dimen/height_48_sp"
            android:scaleType="centerInside"
            android:visibility="gone"
            android:src="@drawable/icon_heatbed_no"/>
        <TextView
            android:id="@+id/printer_name"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="48dp"
            android:gravity="left|center"
            android:text="" />
        <TextView
            android:id="@+id/serial_number"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="48dp"
            android:gravity="left|center"
            android:visibility="gone"
            android:text="" />
        <Button
            android:id="@+id/button_connect"
            android:layout_width="80dp"
            android:layout_height="36dp"
            android:background="@drawable/bottom_selector_radius"
            android:textColor="#FFFFFF"
            android:text="Connected"/>
    </LinearLayout>
</LinearLayout>
