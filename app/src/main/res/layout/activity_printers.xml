        <ListView
            android:id="@+id/printers_list"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_above="@+id/button_add_print"
            android:layout_alignParentTop="true" />

        <Button
            android:id="@+id/button_add_print"
            android:layout_width="match_parent"
            android:layout_height="48dp"
            android:layout_alignParentBottom="true"
            android:layout_margin="16dp"
            android:background="@drawable/bottom_selector_radius"
            android:text="+ Bind New Printer"
            android:textColor="#FFFFFF" />

        <EditText
            android:id="@+id/test"
            android:layout_width="match_parent"
            android:layout_height="96dp"
            android:layout_below="@+id/button_add_print" />
    </RelativeLayout>
    <RelativeLayout
        android:id="@+id/no_printer_bind"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/app_main_show_blue">
        <com.geeetech.administrator.easyprint.CircleImageView
            style="@android:style/Widget.ProgressBar"
            android:id="@+id/circle_img"
            android:layout_width="200dp"
            android:layout_height="200dp"
            android:layout_margin="24dp"
            android:layout_alignParentTop="true"
            android:layout_centerInParent="true"
            android:background="@drawable/icon_printer_off" />
        <TextView
            android:id="@+id/text_printer"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:layout_below="@id/circle_img"
            android:textColor="@color/app_main_white"
            android:text="No 3D printers found..."/>
        <Button
            android:id="@+id/start_bind"
            android:layout_width="match_parent"
            android:layout_height="48dp"
            android:layout_margin="16dp"
            android:layout_below="@+id/text_printer"
            android:background="@drawable/bottom_selector_radius"
            android:backgroundTint="@color/app_main_white"
            android:text="Start to bind"/>
    </RelativeLayout>
</LinearLayout>
