<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical">
    <com.qmuiteam.qmui.widget.QMUITopBar
        android:id="@+id/topbar"
        android:layout_width="match_parent"
        android:layout_height="?attr/qmui_topbar_height"
        app:qmui_layout_collapseMode="pin"
        app:qmui_topbar_bg_color="@color/app_main_show_blue"
        app:qmui_topbar_need_separator="false"
        android:fitsSystemWindows="true">
        <TextView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:text="Model Detail"
            android:textSize="20dp"
            android:textColor="#ffffff"
            android:gravity="center"/>
    </com.qmuiteam.qmui.widget.QMUITopBar>
    <ScrollView
        android:id="@+id/scrollView"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@+id/topbar">
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical">
                <ImageView
                    android:id="@+id/model_detail_img"
                    android:layout_width="match_parent"
                    android:layout_height="200dp" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginHorizontal="16dp"
                    android:paddingHorizontal="16dp"
                    android:background="@drawable/background_border_all"
                    android:orientation="vertical">
                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="32dp"
                        android:gravity="center|left"
                        android:text="@string/model_detail_1"/>
                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="32dp">
                        <Spinner
                            android:id="@+id/spinner_bind"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:dropDownVerticalOffset="32dp"
                            android:background="@drawable/background_border_all" />
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginRight="4dp"
                            android:layout_alignParentRight="true"
                            android:layout_centerInParent="true"
                            android:text="▼" />
                    </RelativeLayout>

                    <TextView
                        android:id="@+id/bind_printer"
                        android:layout_width="wrap_content"
                        android:layout_height="32dp"
                        android:gravity="center|left"
                        android:text="+ bind new printer"
                        android:textColor="@color/app_main_show_blue" />
                </LinearLayout>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginHorizontal="16dp"
                    android:paddingHorizontal="16dp"
                    android:background="@drawable/background_border_all"
                    android:orientation="vertical">
                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="32dp"
                        android:gravity="center|left"
                        android:text="@string/model_detail_2"/>
                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="32dp">
                        <Spinner
                            android:id="@+id/spinner_add_1"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:dropDownVerticalOffset="32dp"
                            android:background="@drawable/background_border_all" />
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginRight="4dp"
                            android:layout_alignParentRight="true"
                            android:layout_centerInParent="true"
                            android:text="▼" />
                    </RelativeLayout>

                    <TextView
                        android:id="@+id/add_printer"
                        android:layout_width="wrap_content"
                        android:layout_height="32dp"
                        android:gravity="center|left"
                        android:text="+ add printer profile"
                        android:textColor="@color/app_main_show_blue" />
                </LinearLayout>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginHorizontal="16dp"
                    android:paddingHorizontal="16dp"
                    android:background="@drawable/background_border_all"
                    android:orientation="vertical">
                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="32dp"
                        android:gravity="center|left"
                        android:text="@string/model_detail_3"/>
                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="32dp">
                        <Spinner
                            android:id="@+id/spinner_add_2"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:dropDownVerticalOffset="32dp"
                            android:background="@drawable/background_border_all" />
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginRight="4dp"
                            android:layout_alignParentRight="true"
                            android:layout_centerInParent="true"
                            android:text="▼" />
                    </RelativeLayout>

                    <TextView
                        android:id="@+id/add_material"
                        android:layout_width="wrap_content"
                        android:layout_height="32dp"
                        android:gravity="center|left"
                        android:text="+ add material"
                        android:textColor="@color/app_main_show_blue" />
                </LinearLayout>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginHorizontal="16dp"
                    android:paddingHorizontal="16dp"
                    android:background="@drawable/background_border_all"
                    android:orientation="vertical">
                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="32dp"
                        android:gravity="center|left"
                        android:text="@string/model_detail_4"/>
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">

                        <RadioGroup
                            android:id="@+id/radio_group"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:gravity="center"
                            android:orientation="horizontal">

                            <RadioButton
                                android:id="@+id/radio_draft"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:button="@null"
                                android:drawableLeft="@drawable/radio_selector_model"
                                android:drawablePadding="5dp"
                                android:background="@android:color/transparent"
                                android:text="Draft" />

                            <RadioButton
                                android:id="@+id/radio_normal"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginHorizontal="8dp"
                                android:button="@null"
                                android:drawableLeft="@drawable/radio_selector_model"
                                android:drawablePadding="5dp"
                                android:checked="true"
                                android:background="@android:color/transparent"
                                android:text="Normal" />

                            <RadioButton
                                android:id="@+id/radio_best"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:button="@null"
                                android:drawableLeft="@drawable/radio_selector_model"
                                android:drawablePadding="5dp"
                                android:background="@android:color/transparent"
                                android:text="Best" />
                        </RadioGroup>
                    </LinearLayout>

                    <TextView
                        android:id="@+id/add_setting"
                        android:layout_width="wrap_content"
                        android:layout_height="32dp"
                        android:gravity="center|left"
                        android:text="+ Advanced Slicer settings"
                        android:textColor="@color/app_main_show_blue" />

                    <LinearLayout
                        android:id="@+id/advance_more"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="12dp"
                        android:gravity="center"
                        android:orientation="vertical"
                        android:visibility="gone">

                        <CheckBox
                            android:id="@+id/support_box"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center"
                            android:background="@android:color/transparent"
                            android:button="@null"
                            android:checked="true"
                            android:drawableLeft="@drawable/checkbox_selector_model"
                            android:drawablePadding="5dp"
                            android:text="Support" />

                        <LinearLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="8dp"
                            android:orientation="horizontal">

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="Materail Flow:" />

                            <EditText
                                android:id="@+id/material_flow"
                                android:layout_width="50dp"
                                android:layout_height="wrap_content"
                                android:layout_marginHorizontal="5dp"
                                android:background="@drawable/background_border_all"
                                android:inputType="number"
                                android:maxLines="1"
                                android:paddingLeft="8dp"
                                android:text="250" />

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="%" />
                        </LinearLayout>
                    </LinearLayout>
                </LinearLayout>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginHorizontal="16dp"
                    android:paddingHorizontal="16dp"
                    android:background="@drawable/background_border_all"
                    android:orientation="vertical">
                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="32dp"
                        android:gravity="center|left"
                        android:text="@string/model_detail_5"/>
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="32dp">
                        <View
                            android:layout_width="0dp"
                            android:layout_weight="1"
                            android:layout_height="match_parent" />
                        <EditText
                            android:id="@+id/model_scale"
                            android:layout_width="0dp"
                            android:layout_weight="1"
                            android:layout_marginRight="8dp"
                            android:paddingLeft="8dp"
                            android:inputType="number"
                            android:background="@drawable/background_border_all"
                            android:layout_height="match_parent" />
                        <TextView
                            android:layout_width="0dp"
                            android:layout_weight="1"
                            android:layout_height="match_parent"
                            android:gravity="center|left"
                            android:text="%"/>
                    </LinearLayout>
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="32dp"
                        android:gravity="center">
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="match_parent"
                            android:gravity="center"
                            android:text="Size:"/>
                        <TextView
                            android:id="@+id/model_width"
                            android:layout_width="wrap_content"
                            android:layout_height="match_parent"
                            android:gravity="center"
                            android:layout_margin="5dp"
                            android:text="0"/>
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="match_parent"
                            android:gravity="center"
                            android:text="*"/>
                        <TextView
                            android:id="@+id/model_depth"
                            android:layout_width="wrap_content"
                            android:layout_height="match_parent"
                            android:gravity="center"
                            android:layout_margin="5dp"
                            android:text="0"/>
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="match_parent"
                            android:gravity="center"
                            android:text="*"/>
                        <TextView
                            android:id="@+id/model_height"
                            android:layout_width="wrap_content"
                            android:layout_height="match_parent"
                            android:gravity="center"
                            android:layout_margin="5dp"
                            android:text="0"/>
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="match_parent"
                            android:gravity="center"
                            android:text="mm"/>
                    </LinearLayout>
                    <Button
                        android:id="@+id/button_print"
                        android:layout_width="match_parent"
                        android:layout_height="48dp"
                        android:layout_margin="16dp"
                        android:background="@drawable/bottom_selector_radius"
                        android:textColor="#FFFFFF"
                        android:text="print"/>
                </LinearLayout>
            </LinearLayout>

            <WebView
                android:id="@+id/stl_webview"
                android:layout_width="match_parent"
                android:layout_height="200dp"
                android:visibility="invisible" />
            <Button
                android:id="@+id/btn_change"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:layout_alignBottom="@+id/stl_webview"
                android:layout_alignRight="@+id/stl_webview"
                android:text="STL" />
        </RelativeLayout>
    </ScrollView>

    <RelativeLayout
        android:id="@+id/show_progressBar"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@+id/topbar"
        android:layout_centerInParent="true"
        android:background="@drawable/shape_corner"
        android:backgroundTint="#00000000"
        android:clickable="true"
        android:visibility="gone">
        <!--<RelativeLayout
            android:id="@+id/layer_wait"
            android:layout_width="120dp"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:background="@drawable/shape_corner"
            android:backgroundTint="#cc8e8e8e"
            android:visibility="visible">#ccc3c3c3
            <TextView
                android:id="@+id/text_tip"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="8dp"
                android:gravity="center"
                android:text="Binding"
                android:textColor="@color/app_main_white" />
            <pl.droidsonroids.gif.GifImageView
                android:layout_width="36dp"
                android:layout_height="36dp"
                android:layout_below="@+id/text_tip"
                android:layout_centerInParent="true"
                android:src="@drawable/icon_wait" />
        </RelativeLayout>-->
        <LinearLayout
            android:id="@+id/linearLayout2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:layout_gravity="center"
            android:layout_margin="16dp"
            android:background="@drawable/background_border_all"
            android:backgroundTint="#eeeff0"
            android:orientation="vertical">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="48dp"
                android:background="@color/app_main_show_blue"
                android:gravity="center"
                android:text="EasyPrint 3D"
                android:textColor="@color/app_main_white" />

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="80dp">

                <TextView
                    android:id="@+id/action_show"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:text="Slice" />

                <RelativeLayout
                    android:id="@+id/progress_all"
                    android:layout_width="match_parent"
                    android:layout_height="18dp"
                    android:layout_centerInParent="true"
                    android:layout_marginHorizontal="16dp"
                    android:background="@drawable/shape_corner"
                    android:visibility="visible">

                    <ProgressBar
                        android:id="@+id/rect_progressBar"
                        style="?android:attr/progressBarStyleHorizontal"
                        android:layout_width="match_parent"
                        android:layout_height="18dp"
                        android:indeterminate="false"
                        android:max="100"
                        android:progress="0"
                        android:progressDrawable="@drawable/custom_progress" />

                    <TextView
                        android:id="@+id/slice_progress_show"
                        android:layout_width="match_parent"
                        android:layout_height="18dp"
                        android:gravity="center"
                        android:text="0%" />
                </RelativeLayout>
            </RelativeLayout>
        </LinearLayout>

        <ImageView
            android:id="@+id/hide_progressBar"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:layout_alignEnd="@+id/linearLayout2"
            android:layout_alignRight="@+id/linearLayout2"
            android:layout_alignTop="@+id/linearLayout2"
            android:padding="6dp"
            android:src="@mipmap/icon_menu_off" />
    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/show_progressBar_two"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@+id/topbar"
        android:layout_centerInParent="true"
        android:background="@drawable/shape_corner"
        android:backgroundTint="#00000000"
        android:clickable="true"
        android:visibility="gone">

        <LinearLayout
            android:id="@+id/linearLayoutTwo"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:layout_gravity="center"
            android:layout_margin="16dp"
            android:background="@drawable/background_border_all"
            android:backgroundTint="#eeeff0"
            android:orientation="vertical">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="48dp"
                android:background="@color/app_main_show_blue"
                android:gravity="center"
                android:text="EasyPrint 3D"
                android:textColor="@color/app_main_white" />

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="80dp">

                <TextView
                    android:id="@+id/action_show_two"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_centerInParent="true"
                    android:gravity="center"
                    android:text="Please wait to download..." />
            </RelativeLayout>
        </LinearLayout>
    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/show_progressBar_three"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@+id/topbar"
        android:layout_centerInParent="true"
        android:background="@drawable/shape_corner"
        android:backgroundTint="#00000000"
        android:clickable="true"
        android:visibility="gone">

        <LinearLayout
            android:id="@+id/linearLayoutThree"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:layout_gravity="center"
            android:layout_margin="16dp"
            android:background="@drawable/background_border_all"
            android:backgroundTint="#eeeff0"
            android:orientation="vertical">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="48dp"
                android:background="@color/app_main_show_blue"
                android:gravity="center"
                android:text="EasyPrint 3D"
                android:textColor="@color/app_main_white" />

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="80dp">

                <TextView
                    android:id="@+id/action_show_three"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:text="Upload" />

                <RelativeLayout
                    android:id="@+id/progress_all_three"
                    android:layout_width="match_parent"
                    android:layout_height="18dp"
                    android:layout_centerInParent="true"
                    android:layout_marginHorizontal="16dp"
                    android:background="@drawable/shape_corner"
                    android:visibility="visible">

                    <ProgressBar
                        android:id="@+id/rect_progressBar_three"
                        style="?android:attr/progressBarStyleHorizontal"
                        android:layout_width="match_parent"
                        android:layout_height="18dp"
                        android:indeterminate="false"
                        android:max="100"
                        android:progress="0"
                        android:progressDrawable="@drawable/custom_progress" />

                    <TextView
                        android:id="@+id/slice_progress_show_three"
                        android:layout_width="match_parent"
                        android:layout_height="18dp"
                        android:gravity="center"
                        android:text="0%" />
                </RelativeLayout>
            </RelativeLayout>
        </LinearLayout>

        <ImageView
            android:id="@+id/hide_progressBar_three"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:layout_alignEnd="@+id/linearLayoutThree"
            android:layout_alignRight="@+id/linearLayoutThree"
            android:layout_alignTop="@+id/linearLayoutThree"
            android:padding="6dp"
            android:src="@mipmap/icon_menu_off" />
    </RelativeLayout>
</RelativeLayout>
