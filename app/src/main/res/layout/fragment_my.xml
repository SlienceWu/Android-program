                            android:id="@+id/text_printer_profile"
                            android:layout_width="match_parent"
                            android:layout_height="24dp"
                            android:gravity="center"
                            android:text="Printer profile"
                            android:textSize="12dp" />

                        <TextView
                            android:id="@+id/printer_profile_num"
                            android:layout_width="match_parent"
                            android:layout_height="24dp"
                            android:gravity="center"
                            android:text="0"
                            android:textSize="12dp" />
                    </LinearLayout>

                    <LinearLayout
                        android:id="@+id/my_top_btn4"
                        android:layout_width="0dp"
                        android:layout_height="48dp"
                        android:layout_weight="1"
                        android:orientation="vertical">

                        <TextView
                            android:id="@+id/text_material_profile"
                            android:layout_width="match_parent"
                            android:layout_height="24dp"
                            android:gravity="center"
                            android:text="Material profile"
                            android:textSize="12dp" />

                        <TextView
                            android:id="@+id/material_profile_num"
                            android:layout_width="match_parent"
                            android:layout_height="24dp"
                            android:gravity="center"
                            android:text="0"
                            android:textSize="12dp" />
                    </LinearLayout>
