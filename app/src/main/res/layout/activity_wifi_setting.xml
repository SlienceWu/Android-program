<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <com.qmuiteam.qmui.widget.QMUITopBar
        android:id="@+id/topbar"
        android:layout_width="match_parent"
        android:layout_height="?attr/qmui_topbar_height"
        app:qmui_layout_collapseMode="pin"
        app:qmui_topbar_bg_color="@color/app_main_show_blue"
        app:qmui_topbar_need_separator="false"
        android:fitsSystemWindows="true">
        <TextView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:text="WiFi-config"
            android:textSize="20dp"
            android:textColor="#ffffff"
            android:gravity="center"/>
    </com.qmuiteam.qmui.widget.QMUITopBar>

    <TextView
        android:id="@+id/text_name"
        android:layout_width="match_parent"
        android:layout_height="36dp"
        android:gravity="center"
        android:layout_below="@+id/topbar"
        android:text="@string/wifi_name"/>
    <EditText
        android:id="@+id/wifi_name"
        android:layout_width="match_parent"
        android:layout_height="48dp"
        android:paddingLeft="8dp"
        android:maxLength="20"
        android:lines="1"
        android:layout_below="@+id/text_name"
        android:background="@drawable/background_border_all"
        android:layout_marginHorizontal="16dp" />
    <TextView
        android:id="@+id/text_password"
        android:layout_width="match_parent"
        android:layout_height="36dp"
        android:gravity="center"
        android:layout_below="@+id/wifi_name"
        android:text="@string/wifi_password"/>
    <EditText
        android:id="@+id/wifi_password"
        android:layout_width="match_parent"
        android:layout_height="48dp"
        android:paddingLeft="8dp"
        android:maxLength="36"
        android:lines="1"
        android:layout_below="@+id/text_password"
        android:background="@drawable/background_border_all"
        android:layout_marginHorizontal="16dp" />

    <Button
        android:id="@+id/button_config"
        android:layout_width="match_parent"
        android:layout_height="48dp"
        android:layout_below="@+id/wifi_password"
        android:layout_marginHorizontal="16dp"
        android:layout_marginVertical="16dp"
        android:background="@drawable/bottom_selector_radius"
        android:textColor="#FFFFFF"
        android:text="OK"/>

    <RelativeLayout
        android:id="@+id/layer_wait"
        android:layout_width="120dp"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:background="@drawable/shape_corner"
        android:backgroundTint="#cc8e8e8e"
        android:visibility="gone">

        <TextView
            android:id="@+id/text_tip"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="8dp"
            android:gravity="center"
            android:text="Configing"
            android:textColor="@color/app_main_white" />

        <pl.droidsonroids.gif.GifImageView
            android:layout_width="36dp"
            android:layout_height="36dp"
            android:layout_below="@+id/text_tip"
            android:layout_centerInParent="true"
            android:src="@drawable/icon_wait" />
    </RelativeLayout>
</RelativeLayout>
