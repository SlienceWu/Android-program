<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto">
    <com.qmuiteam.qmui.widget.QMUITopBar
        android:id="@+id/topbar"
        android:layout_width="match_parent"
        android:layout_height="?attr/qmui_topbar_height"
        app:qmui_layout_collapseMode="pin"
        app:qmui_topbar_bg_color="@color/app_main_show_blue"
        app:qmui_topbar_need_separator="false"
        android:fitsSystemWindows="true">
        <TextView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:text="3D Printer"
            android:textSize="20dp"
            android:textColor="#ffffff"
            android:gravity="center"/>
    </com.qmuiteam.qmui.widget.QMUITopBar>
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="16dp"
        android:layout_above="@+id/printer_sign"
        android:text="Enter the serial number as shown on the barcode"/>
    <EditText
        android:id="@+id/printer_sign"
        android:layout_width="match_parent"
        android:layout_height="48dp"
        android:layout_centerInParent="true"
        android:layout_margin="16dp"
        android:paddingLeft="8dp"
        android:maxLines="1"
        android:maxLength="15"
        android:inputType="textVisiblePassword"
        android:digits="1234567890qwertyuiopasdfghjklzxcvbnmQWERTYUIOPASDFGHJKLZXCVBNM"
        android:background="@drawable/background_border_all"/>
    <Button
        android:id="@+id/button_add_print"
        android:layout_width="match_parent"
        android:layout_height="48dp"
        android:layout_below="@+id/printer_sign"
        android:layout_margin="16dp"
        android:background="@drawable/bottom_selector_radius"
        android:textColor="#FFFFFF"
        android:text="Next"/>

    <RelativeLayout
        android:id="@+id/layer_wait"
        android:layout_width="120dp"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:background="@drawable/shape_corner"
        android:backgroundTint="#cc8e8e8e"
        android:visibility="gone">

        <TextView
            android:id="@+id/text_tip"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="8dp"
            android:gravity="center"
            android:text="Binding"
            android:textColor="@color/app_main_white" />

        <pl.droidsonroids.gif.GifImageView
            android:layout_width="36dp"
            android:layout_height="36dp"
            android:layout_below="@+id/text_tip"
            android:layout_centerInParent="true"
            android:src="@drawable/icon_wait" />
    </RelativeLayout>
</RelativeLayout>
