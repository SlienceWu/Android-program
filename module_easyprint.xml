<?xml version="1.0" encoding="UTF-8"?>
<project name="module_easyprint" default="compile.module.easyprint">
  <dirname property="module.easyprint.basedir" file="${ant.file.module_easyprint}"/>
  
  <property name="module.jdk.home.easyprint" value="${project.jdk.home}"/>
  <property name="module.jdk.bin.easyprint" value="${project.jdk.bin}"/>
  <property name="module.jdk.classpath.easyprint" value="${project.jdk.classpath}"/>
  
  <property name="compiler.args.easyprint" value="-encoding UTF-8 -source 1.7 -target 1.7 ${compiler.args}"/>
  
  <property name="easyprint.output.dir" value="${module.easyprint.basedir}/build/classes/production/EasyPrint"/>
  <property name="easyprint.testoutput.dir" value="${module.easyprint.basedir}/build/classes/test/EasyPrint"/>
  
  <path id="easyprint.module.bootclasspath">
    <!-- Paths to be included in compilation bootclasspath -->
  </path>
  
  <path id="easyprint.module.production.classpath">
    <path refid="${module.jdk.classpath.easyprint}"/>
  </path>
  
  <path id="easyprint.runtime.production.module.classpath">
    <pathelement location="${easyprint.output.dir}"/>
  </path>
  
  <path id="easyprint.module.classpath">
    <path refid="${module.jdk.classpath.easyprint}"/>
    <pathelement location="${easyprint.output.dir}"/>
  </path>
  
  <path id="easyprint.runtime.module.classpath">
    <pathelement location="${easyprint.testoutput.dir}"/>
    <pathelement location="${easyprint.output.dir}"/>
  </path>
  
  
  <patternset id="excluded.from.module.easyprint">
    <patternset refid="ignored.files"/>
  </patternset>
  
  <patternset id="excluded.from.compilation.easyprint">
    <patternset refid="excluded.from.module.easyprint"/>
  </patternset>
  
  
  <target name="compile.module.easyprint" depends="compile.module.easyprint.production,compile.module.easyprint.tests" description="Compile module EasyPrint"/>
  
  <target name="compile.module.easyprint.production" depends="register.custom.compilers" description="Compile module EasyPrint; production classes"/>
  
  <target name="compile.module.easyprint.tests" depends="register.custom.compilers,compile.module.easyprint.production" description="compile module EasyPrint; test classes" unless="skip.tests"/>
  
  <target name="clean.module.easyprint" description="cleanup module">
    <delete dir="${easyprint.output.dir}"/>
    <delete dir="${easyprint.testoutput.dir}"/>
  </target>
</project>